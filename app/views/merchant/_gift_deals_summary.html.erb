<table align=left  style="font-size: 14px; border-collapse: collapse; width:1000px; text-align: center; margin-left: -10px;" CELLPADDING="4" CELLSPACING="0">
    <tr>
      <th style="color:#ffffff;border-collapse:collapse;" class="discussionboard" width="550px">Title</th>
      <th style="color:#ffffff;border-collapse:collapse;" class="discussionboard" width="100px">Status</th>
      <th style="color:#ffffff;border-collapse:collapse;" class="discussionboard" width="100px">No. of Customers</th>
      <th style="color:#ffffff;border-collapse:collapse;" class="discussionboard" width="150px"></th>
    </tr>
    <% @deals.each do |deal| %>
      <tr>
        <td style="color:#000000;height: 0px;max-height: 50px;"><%= deal.name%></td>
        <td style="background-color: #C0C0C0;color:#000000;"><%= deal.status%></td>
        <td style="color:#000000;"><%= deal.no_of_customers %></td>
        <td style="background-color: #C0C0C0;color:#000000;"><a href="#" onclick="showGiftDeal('popup_view_deal',<%= deal.id %>);" style="color: rgb(3, 77, 124);">View</a>&nbsp;&nbsp;<a href="#" onclick="editGiftDeal('popup_create_deal',<%= deal.id %>);" style="color: rgb(3, 77, 124);">Edit</a>&nbsp;&nbsp;</td>
      </tr>
      <tr>
        <td style="color:#000000;height: 0px;max-height: 50px;" colspan="4"><hr/></td>
      </tr>
    <%end%>
  </table>