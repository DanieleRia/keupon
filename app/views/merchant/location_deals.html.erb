      <tbody>
        <% for merchant in @location_deals %>
          <tr>
            <td><%= merchant.deal.name %></td>
            <td><%= merchant.deal.value %></td>
            <td><%= merchant.deal.start_date%></td>
            <td><%= merchant.deal.expiry_date %></td>
  <td><%= merchant.deal.deal_location_detail.address1 %><%= merchant.deal.deal_location_detail.address2 %></td>
  <td><%= merchant.deal.deal_location_detail.city %></td>
          
          </tr>
        <% end %>
      </tbody>
    </table>
  <%else%>
