  <%if !@location_deals.blank?%>
    <table>
      <thead>
        <tr>
          <th>Deal Name</th>
          <th>Value</th>
          <th>Start Date</th>
          <th>Expiry Date</th>
          <th>Address</th>
<th>Country</th>
        </tr>
