<script type="text/javascript">
        // When DOM loads, init the page.
        $(function() {
          // Executes a callback detecting changes with a frequency of 1 second
          $("#category").observe_field(2, function( ) {
            $.post("/get_sub_category", { category:this.value} );
          });
        });

      </script>

