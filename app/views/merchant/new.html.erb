        <div id="content">
            <h1>Merchant Signup</h1>
            <div id="wrapper">
                <div id="steps">
                    <form id="formElem" name="formElem" action="/merchant_register" enctype="multipart/form-data" method="post">
                        <fieldset class="step">
                            <legend>Merchant</legend>
                            <p>
                                <label for="username">First name</label>
                                <input id="username" name="merchant_profile[first_name]" />
                            </p>
                            <p>
                                <label for="username">Last name</label>
                                <input id="username" name="merchant_profile[last_name]" />
                            </p>
                            <p>
                                <label for="gender">Gender</label>
                                <input id="merchant_profile_gender" name="merchant_profile[gender]" type="radio" value="m"/> Male <input id="merchant_profile_gender" name="merchant_profile[gender]" type="radio" value="f"/> Female
                            </p>
                        </fieldset>
                        <fieldset class="step">
                            <legend>Merchant Contact Details</legend>
                            <p>
                                <label for="address1">Address1</label>
                                <input id="merchant_profile_address1" name="merchant_profile[address1]" size="35%" type="text" />
                            </p>
                            <p>
                                <label for="address2">Address2</label>
<input id="merchant_profile_address2" name="merchant_profile[address2]" size="35%" type="text" />
                            </p>
                            <p>
                                <label for="country">Country</label>
<input id="merchant_profile_country" name="merchant_profile[country]" size="35%" type="text" />
                            </p>
                            <p>
                                <label for="zipcode">Zipcode</label>
<input id="merchant_profile_zipcode" name="merchant_profile[zipcode]" size="35%" type="text" />
                            </p>
                            <p>
                                <label for="phone">Phone</label>
<input id="merchant_profile_contact_number" name="merchant_profile[contact_number]" size="35%" type="text" />
                            </p>
<p>
                                <label for="email">Email</label>
<input id="merchant_profile_email_address" name="merchant_profile[email_address]" size="35%" type="text" />
                            </p>
                        </fieldset>
                        <fieldset class="step">
                            <legend> Company </legend>
                            
                            <p>
                                <label for="name">Name</label>
<input id="company_name" name="company[name]" size="35%" type="text" />
                            </p>
                            <p>
                                <label for="url">URl</label>
<input id="company_website" name="company[website]" size="35%" type="text" />
                            </p>
                            <p>
                                <label for="Address1">Address1</label>
<input id="company_address2" name="company[address1]" size="35%" type="text" />
                            </p>
                            <p>
                                <label for="Address2">Address2</label>
<input id="company_address2" name="company[address2]" size="35%" type="text" />
                            </p>
                             <p>
                                <label for="Country">Country</label>
<input id="company_country" name="company[city]" size="35%" type="text" />
                            </p>
                            <p>
                                <label for="zipcode">Zipcode</label>
<input id="company_zipcode" name="company[zipcode]" size="35%" type="text" />
                            </p>
                            <p>
                                <label for="Company Photo/Logo">Company Photo/Logo</label>
<input id="merchant_company_photo" name="merchant[company_photo]" size="35%" type="file" />
                            </p>
                        </fieldset>
