      </tr>

      <tr>
        <td style="color:#000000;">Deal Photo:</td>
        <td><%= f.file_field :deal_photo, :size=>"25%" %> </td>
      </tr>
      <tr>
        <td style="color:#000000;">Deal Category:</td>
        <td>
          <select id="category" name="category">
            <option value="0">Select a Category</option>
