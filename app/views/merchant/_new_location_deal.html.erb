
<div style="height:400px;text-align:left;">
  <div><%= error_messages_for :deal %></div>
  <% form_for @deal, :url => {:controller => 'deals', :action => "create" } , :html => { :multipart => true }  do |f| %>
    <%=hidden_field :deal, :merchant_id, :value => current_merchant.id%>
   <%=hidden_field :deal, :deal_type_id, :value => 2%>
    <input type="hidden" name="start_time" id="start_time" value="<%= params[:date] %>" />
<h4>New Location deal</h4>

    <table align=left  style="font-size:14px;" CELLPADDING="3" CELLSPACING="6">
     
      <tr>
        <td style="color:#000000;">Deal Title:</td>
        <td><%= f.text_field :name, :size=>"25%"  %> </td>
      </tr>
      <tr>
        <td style="color:#000000;">Original Value:</td>
        <td><%= f.text_field :value, :size=>"25%",:onchange =>"discount()"  %> </td>
      </tr>
      <tr>
        <td style="color:#000000;">Discount:</td>
