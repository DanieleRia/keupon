<div style="width:998px;text-align:left;border:3px solid black;">

  <table  style="font-size:14px;min-height:150px;" CELLPADDING="3" CELLSPACING="6">
           <% form_for @company, :url => {:controller => 'merchants', :action => 'my_company'} , :html => { :multipart => true } do |f| -%>
    <tr>
      <td width="5%"> </td>
      <td width="5%" style="color:#000000;">Name:</td>
      <td width="10%"><%=f.text_field 'name',:size=> '15'%></td>
    </tr>
    <tr>
      <td width="5%"> </td>
      <td width="5%" style="color:#000000;">Address1 :</td>
      <td width="10%"><%=f.text_field 'address1', :size=> '15'%></td>
    </tr>
    <tr>
      <td width="5%"> </td>
      <td width="5%" style="color:#000000;">Address2 :</td>
      <td width="10%"><%=f.text_field 'address2', :size=> '15'%></td>
    </tr>
    <tr>
      <td width="5%"> </td>
      <td width="5%" style="color:#000000;">City :</td>
      <td width="10%"><%=f.text_field 'city', :size=> '15'%></td>
    </tr>
    <tr>
      <td width="5%"> </td>
      <td width="5%" style="color:#000000;">zipcode :</td>
      <td width="10%"><%=f.text_field 'zipcode', :size=> '15'%></td>
    </tr>
    <tr>
      <td width="5%"> </td>
      <td width="5%" style="color:#000000;">Company Logo :</td>
      <td> 
       <%if @company.company_photo.nil?%>
          <img src="/images/profile_pic.jpg" border="0px" />
        <%else%>
          <%=image_tag (@company.company_photo.url(:small))%>
        <%end%>
      <%=f.file_field 'company_photo'%></td>
    </tr>
    <tr>
      <td width="5%"> </td>
      <td width="5%" style="color:#000000;">Details:</td>
      <td width="10%"><%=f.text_area 'detail', :size=> '25'%></td>
    </tr>
 <tr>
            <td width="5%"> </td>
            <td width="15%"> </td>
            <td width="35%" colspan="2">
              <br/><%=image_submit_tag ("upload_btn.jpg"), :onclick => "return Validate();"%><%=link_to image_tag("cancel.jpg", :border=>0),"/index", {:style=>"padding-left:30px;"}%>
            </td>
          </tr>
          <% end -%>
        </div>
      


   
  </table>


</div> 
