<form action="/sessions/forgot_password" method="post">
    <div id="popup_center" class="login_pos">
        <a href="javascript:void(0);" onclick="Effect.Fade('RB_window', {duration: 0.4});Effect.Fade('RB_overlay', {duration: 0.4});">
			<img src="images/close_btn1.png" border="0" style="margin-top:15px; position:absolute; margin-left:520px;"/>
		</a>
        <div id="popup" class="login">
            <div class="login_txt" style="line-height:40px;">
                <span>Forgot<br/>Password</span>
            </div>
            <div>
                <img src="/images/keupons.jpg" hspace="35" />
            </div>
            <div style="padding:20px 0 0 25px;">
                <span style="padding:5px 0 0 0;float:left;"><b>Please enter your<br/>Email address in order<br/>to retrieve a new password.</b></span>
            </div>
            <div class="login_mainbox" style="margin-top:-5px;margin-left:230px;">
                <div>
                    <span style="width:79px;float:left;padding:6px 0 5px;"><b>Your Email:</b></span>
					<br/>
					<input type="text" name="email" id="email" size="20" class="login_tb1a" style="float:none;"/>
                </div>
            </div>
            <div class="login_go" style="margin:0 0 0 535px;">
                <%= image_submit_tag("/images/go_big.jpg") %>
            </div>
        </div>
    </div>
</form>