              </tr>
              <tr>
                <td align="right" class="deals_content2">Deal photo <span class="deals_content_red_bold">*</span>:</td>
                <td align="left">
                  <%if @deal.deal_photo%>
                  <%= image_tag @deal.deal_photo.url(:thumb)%>
                  <%end%>
                  <br/>
                  <input type="file" name="deal[deal_photo]" id="deal_photo" />
                </td>
              </tr>
              <tr>
                <td align="right" class="deals_content2"><input type="checkbox" name="deal[preferred]" id="deal_preferred" value="1" <%=(@deal.preferred.to_s == "1")? "checked" : "" %> /></td>
                <td align="left" class="deals_content2"> This is a Hot(Highly Preferred) Deal</td>
              </tr>
              <tr>
                <td align="right" class="deals_content2">&nbsp;</td>
                <td align="left">&nbsp;</td>
              </tr>
            </table></td>
            <td width="6%">&nbsp;</td>
          </tr>
