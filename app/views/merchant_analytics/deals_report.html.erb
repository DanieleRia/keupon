<table style="width: 1000px; margin: auto;">  
  <tr>
    <td id="report_title"></td>
    <td style=" vertical-align: bottom; height: 30px;" >
      <%= form_remote_tag(:url => {:controller => "merchant_analytics", :action => "deals_report", :loading=>"Element.show('spinner');",:complete=>"Element.hide('spinner');"},:html => {:id => "deals_analytics_form1", :style=> "padding:0;margin:0;"})%>        
        <div id="date_search" style="display: none;">
          <table>
            <tr>
              <td>
		Date Range: <%= calendar_date_select_tag "start_date"%> to <%= calendar_date_select_tag "end_date" %>
              </td>
            </tr>
            <tr>
              <td align="right"><a href="#" onclick="$('deals_analytics_form1').onsubmit();return false;">Search</a>&nbsp;&nbsp;<a href="javascript:void(null);" onclick="Effect.BlindUp('date_search');Element.show('search-button');return false;" id="cancel-search">Cancel</a></td>
            </tr>
          </table>
	</div>
        <div align="right" id="search-button">
          <a href="javascript:void(null);" onclick="Element.hide('search-button');Effect.BlindDown('date_search');return false;">Date Search</a>
        </div>
      </form>
    </td>
    <td><%= image_tag("/images/spinner.gif", :align => "absmiddle", :border => 0, :id => "spinner", :style =>"display: none;" ) %></td>
  </tr>
</table>
<br/>
