<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="en" xml:lang="en">
  <head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    <title>Keupons</title>
    <%= javascript_include_tag :defaults%>
    <% CalendarDateSelect.format = :italian %>
    <%= calendar_date_select_includes "red" %>
    <link href="/stylesheets/calendar/red/style.css" rel="stylesheet" type="text/css" />
    <script src="/javascripts/jquery-latest.js" type="text/javascript"></script>
    <script type="text/javascript">
      var j = jQuery.noConflict();
    </script>
    <%= stylesheet_link_tag 'royal' %>
    <%= stylesheet_link_tag 'style_merchant' %>
    <%= stylesheet_link_tag 'style_new' %>    
    <script src="/javascripts/FusionMaps.js" type="text/javascript"></script>
    <script src="/javascripts/FusionCharts.js" type="text/javascript"></script>
    <link href="/stylesheets/charts/style.css" media="screen" rel="stylesheet" type="text/css" />
    <script type="text/javascript">
     j(function(){
	j('#webmenu li').hover(function(){
		j(this).children('ul').stop(true,true).show('slow');
	},function(){
		j(this).children('ul').stop(true,true).hide('slow');
	});

	j('#webmenu li').hover(function(){
		j(this).children('div').stop(true,true).show('slow');
	},function(){
		j(this).children('div').stop(true,true).hide('slow');
	});
});
    </script>
  </head>
  <body>
    <table width="890"  border="0" align="center" cellpadding="0" cellspacing="0"  class="bg">
      <tr>
        <td class="main">
          <td><%=image_tag('logo.jpg')%></td>
          <td style="margin-top: 12px;"><%= render :partial => "shared/user_bar"%></td>
        </td></tr>
    </table>


    <%= render :partial => "shared/merchant_header_menu"%>

    <div id="todayHOT" style=" width: 998px;margin-left: 121px;">
      <div class="todHotdeal"><%=@page%></div>
    </div>

    <table width="890"  border="0" align="center" cellpadding="0" cellspacing="0">
      <tr><td> <div id="main" style="margin-left: 90px;">

            <%if flash[:notice] %>
              <br/><div style="text-align:center;background-color:grey;color:#fff;"><%= flash[:notice] %></div>
            <%else%>
              <br/><div style="text-align:center;background-color:grey;color:#fff;"><%= flash[:error]%>  </div>
            <%end%>
            <%= yield %><br/><br/>
            <%=image_tag('footer.gif')%>
          </div>
        </td>
      </tr>
    </table>
  </body>
</html>
