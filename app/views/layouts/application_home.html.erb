      jquery(document).ready(function () {
        jquery("ul.menu_body li:even").addClass("alt");
        jquery('img.menu_head').click(function () {
         jquery('ul.menu_body').slideToggle('medium');
        });
        jquery('ul.menu_body li a').mouseover(function () {
          $(this).animate({ fontSize: "14px", paddingLeft: "20px" }, 50 );
        });
        jquery('ul.menu_body li a').mouseout(function () {
          jquery(this).animate({ fontSize: "12px", paddingLeft: "10px" }, 50 );
        });
      });
    </script>

