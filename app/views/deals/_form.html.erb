<script language="JavaScript">
  function discount() {

    var olv = document.getElementById('deal_value').value
    var dis = document.getElementById('deal_discount').value
    var sva = (olv * dis/100)
    document.getElementById('deal_save_amount').value = sva


  }
</script>

<div style="width:608px;height:400px;text-align:left;">

  <div><%= error_messages_for :deal %></div>
  <% form_for @deal, :url => { :action => "create" } , :html => { :multipart => true }  do |f| %>
    <%=hidden_field :deal, :merchant_id, :value => current_merchant.id%>
    <table align=left  style="font-size:14px;" CELLPADDING="3" CELLSPACING="6">
      <tr>
        <td width="5%"> </td>
        <td width="20%" style="color:#000000;"><h3>Deal Creation</h3></td>
        <td width="30%"><%#= f.text_field :login, :size=>"25%"  %> </td>
      </tr>  <tr>
        <td width="5%"> </td>
        <td width="20%" style="color:#000000;">Deal Name :</td>
        <td width="30%"><%= f.text_field :name, :size=>"25%"  %> </td>
      </tr>
      <tr>
        <td width="5%"> </td>
        <td width="20%" style="color:#000000;">Buy :</td>
        <td width="30%"><%= f.text_field :buy, :size=>"25%"  %> </td>
      </tr>
      <tr>
        <td width="5%"> </td>
        <td width="20%" style="color:#000000;">Original Value :</td>
        <td width="30%"><%= f.text_field :value, :size=>"25%",:onblur =>"discount()"  %> </td>
      </tr>
      <tr>
        <td width="5%"> </td>
        <td width="20%" style="color:#000000;">Discount :</td>
        <td width="30%"><%= f. select( "discount", Deal::DISCOUNTS, {:include_blank => 'Mininum 50%'},:onblur =>"discount()") %> </td>
      </tr>

      <tr>
        <td width="5%"> </td>
        <td width="20%" style="color:#000000;">Save Amount :</td>
        <td width="30%"><%= f.text_field :save_amount, :size=>"25%" ,:readonly => 'true' %> </td>
      </tr>
      <tr>
        <td width="5%"> </td>
        <td width="20%" style="color:#000000;">Members to get :</td>
        <td width="30%"><%= f.text_field :number, :size=>"25%"  %> </td>
      </tr>
      <tr>
        <td width="5%"> </td>
        <td width="20%" style="color:#000000;">Rules of the deal :</td>
        <td width="30%"><%= f.text_area :rules, :size=>"30X15"  %> </td>
      </tr>
      <tr>
        <td width="5%"> </td>
        <td width="20%" style="color:#000000;">Highlights of the deal :</td>
        <td width="30%"><%= f.text_area :highlights, :size=>"30x5"  %> </td>
      </tr>
      <tr>
        <td width="5%"> </td>
        <td width="20%" style="color:#000000;">Expiry Date :</td>
        <td width="30%"><%= f.text_field :expiry_date, :size=>"25%"  %> </td>
      </tr>
         <tr>
        <td width="5%"> </td>
        <td width="20%" style="color:#000000;">Deal Photo :</td>
        <td width="30%"><%= f.file_field :deal_photo, :size=>"25%" %> </td>
      </tr>



      <tr>
        <td width="5%"> </td>
        <td width="15%"> </td>
        <td width="35%" colspan="2">
          <br/><%=image_submit_tag ("register.jpg"), :onclick => "return Validate();"%><%=link_to image_tag("cancel.jpg", :border=>0),"/", {:style=>"padding-left:30px;"}%>
        </td>
      </tr>
      <tr><td></td><td></td></tr> <% end %>
  </table>


</div>































































