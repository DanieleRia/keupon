<table border="0" cellpadding="0" cellspacing="0">
 <tr>
   <td><div id="demandDealSubTitle"><div class="yourDemandDealSubTitle">Deals that You Demanded</div></div></td>
 </tr>
 <tr>
  <td>
    <div style="height:660px;width:349px;left:0;top:0;visibility:visible;margin: 0;padding: 0;overflow:auto; border-right: 1px solid;">
      <% accepted_deal = nil
      for demand_deal in @demand_deals_summary
        if demand_deal.status == "accepted"
          accepted_deal = Deal.find(demand_deal.deal_id)
        end
      %>
      <div id="testid" class="dateB1_center" style="padding-left: 25px; padding-top: 10px; cursor: pointer;" onMouseover="showtooltip('<%= demand_deal.description %>')" onMouseout="hidetooltip()" onClick="call_offers('<%= demand_deal.id %>' , '<%= demand_deal.status %>');" >
            <div class="dateB1_C1" style="position:relative;">
              <img src="/images/demand_<%= demand_deal.status %>.jpg" border="0px" style="width: 204px; height: 161px;"/>
              <div style="position: absolute; top: 80px;">
                <img src="/images/iwantdeal_<%= demand_deal.status %>.png" border="0px" />
              </div>
              <% if demand_deal.status == "offered" %>
              <div style="position: absolute; top: 130px;">
                <span style=" padding-left: 5px; font-weight: bold; font-size: 20px; color: black;"><%= demand_deal.offerings %></span>
              </div>
              <% end %>
            </div>        
            <div class="iwantdeal_vertical_tabs">
            S$<%= demand_deal.expected_value %>
            <br />
            <br />
            <br />
            <p style="padding-top:10px;"><%= demand_deal.number %></p>
            <br />
            <br />
            <p style="padding-top:10px;"><%= Time.at(demand_deal.deadline).strftime("%d-%m-%y") %></p>
            </div>        
          </div>      
      <% end %>       
    </div>
</td> 
 </tr>
</table>