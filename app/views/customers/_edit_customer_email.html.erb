<div class="myAccDropBox">
<% form_for :customer, @customer, :url => {:controller => 'customers', :action => 'update_customer_email', :id => @customer.id} do |f| -%>
  	<div class="myacc_left" style="margin-top:25px;">
	    EMAIL
	</div>
	<div class="myacc_right1">
	    <table border="0" cellpadding="0" cellspacing="3" width="100%" style="padding:10px 0 0 0;">
          	<tr>
	            <td width="20%" style="color:#000000;">Email:</td>
	            <td width="70%"><%= f.text_field :email, :value=> @customer.email %></td>
            </tr>
            <tr>
            	<td width="30%">&nbsp;</td>
            	<td>
	              	<%= image_submit_tag ('/images/update_btn.png') %>
					<%= link_to image_tag('/images/cancel_search.png'), :controller => "customers", :action => "cancel_edit_customer_email", :id => @customer.id %>
	        	</td>
            </tr>
		</table>
	</div>
<% end %>
</div>
