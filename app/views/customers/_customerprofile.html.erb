<div id="popup_center">
    <div id="popup" class="signup_pos">
        <a href="javascript:void(0);" onclick="Effect.Fade('RB_window', {duration: 0.4});Effect.Fade('RB_overlay', {duration: 0.4});">
			<img src="images/close_btn1.png" border="0" style="margin-top:15px; position:absolute; margin-left:596px;"/>
		</a>
        <div class="sign_up_welcome">
            WELCOME TO
        </div>
        <div class="sign_up_keu">
            <img src="images/keupons_big.jpg" />
        </div>
        <div class="sign_up_banner">
            <img src="images/brown_ban.png" />
        </div>
        <div class="sign_up_left_con">
            <h2>SIGN UP</h2>
            <span>Purchased items may be delivered to this registered mailing address</span>
            <div class="signup_mainbox2">
            	<div  class="signup_mainbox_left">
	                <div style="height:30px;">
	                    <span style="width:80px;float:left;">FIRST NAME</span>
						<%= p.text_field :first_name, :class=> "login_tb1b" %>
	                </div>
	                <div style="height:30px; margin-top:10px;">
	                    <span class="email"  style="width:80px;float:left;">LAST NAME</span>
						<%= p.text_field :last_name, :class=> "login_tb1b" %>
	                </div>
	                <div style="height:30px; margin-top:10px;">
	                    <span class="email" style="width:120px;float:left;">NRIC</span>
						<%= p.text_field :customer_pin, :class=> "login_tb1b" %>
	                    <span style="color:#663300;position:absolute;margin-top:25px;">NRIC No. needed for verification
	                        <br/>
	                        to redeem Keupons
	                    </span>
	                </div>
	                <div style="height:30px; margin-top:35px;">
	                    <span class="email" style="width:120px;float:left;">MOBILE NUMBER</span>
	                    <%= p.text_field :contact_number, :class=> "login_tb1b" %>
						<span style="color:#663300;position:absolute; margin-top:25px;">
							SMS Keupons may be sent to your<br/>mobile number
	                    </span>
	                </div>
				</div>
				<div class="signup_mainbox_right">
                    <div style="height:73px;">
                        <span style="width:100px;float:left;">ADDRESS</span>
                        <%= p.text_area :address1, :class=> "login_ta1b" %>
					</div>
                    <div style="height:30px; margin-top:10px;">
                        <span class="email" style="width:100px;float:left;">COUNTRY</span>
                        <%= p.text_field :country, :class=> "login_tb1b" %>
					</div>
                    <div style="height:30px; margin-top:10px;">
                        <span  style="width:100px;float:left;" class="email">POSTAL CODE</span>
						<%= p.text_field :zipcode, :class=> "login_tb1b" %>
                    </div>
                    <div class="login_forget">
                    	<a href="javascript:void(0);" onclick="changeScreenStepTwo();"><img src="images/next.jpg" border="0" /></a>
                    </div>
                </div>
            </div>
            <div class="signup_footer1">
                <div style="float:left;">
                    <img src="images/grey1.png" />
                </div>
                <div class="signup_line1">
                    <img src="images/line1.png" />
                </div>
                <div style="float:left;">
                    <img src="images/red2.png" />
                </div>
                <div class="signup_line1">
                    <img src="images/line1.png" />
                </div>
                <div style="float:left;">
                    <img src="images/grey3.png" />
                </div>
            </div>
        </div>
    </div>
</div>