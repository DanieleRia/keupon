<script src="http://www.google.com/jsapi" type="text/javascript"></script>
<script type="text/javascript">
  google.load("jquery", "1.3.2");
</script>
<script src='/javascripts/filter.js' type='text/javascript' ></script>
<div id="page-wrap">  <br />
  <h1>&nbsp;</h1>
  <p id="catpicker"></p>
  <br />
  <%for open_deal in @open_deals
    opd = Deal.find(open_deal.id)
  %>
    <div class="discounted-item freeshipping" style="margin-left: 140px;">
      <img SRC="<%= opd.deal_photo.url(:small) %>" alt="img"/>
      <div class="reasonbar">
        <div class="prod-title" style="width: 65%;color:#FFFFFF;"><%= link_to  open_deal.name, :controller => 'customers',:action=>'deal_details',:id => open_deal.id%> </div>
        <div class="reason" style="width: 30%;">Date Expiry</div>
        <div class="reason" style="width: 30%;"><%=Time.at(open_deal.end_time.to_i).strftime("%d-%m-%Y") %></div>
      </div>
      <div class="discount-bar">
        No of Deals Bought &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;| &nbsp;&nbsp;&nbsp; Location &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; | &nbsp;&nbsp;&nbsp;&nbsp; Current Discount
      </div>
      <div class="price">
         &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%=open_deal.no_of_customers%> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;| &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%=open_deal.address1%> <%=open_deal.address2%> <%=open_deal.city%>  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; | &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%#=open_deal.discount%>
      </div>
    </div>
  <%end%>
</div>
