<script src="http://www.google.com/jsapi" type="text/javascript"></script>
<script type="text/javascript">
  google.load("jquery", "1.3.2");
</script>
<script src='/javascripts/filter.js' type='text/javascript' ></script>
<div id="page-wrap">  <br />
  <h1>Here are open deals</h1>
  <p id="catpicker"></p>
  <br />
  <%for open_deal in @open_deals%>
    <div class="discounted-item freeshipping" >
      <img src="/images/discountthumb-fieldlazer.jpg"  />
      <div class="reasonbar">
        <div class="prod-title" style="width: 65%;"><%= link_to  open_deal.name, :controller => 'customers',:action=>'deal_details',:id => open_deal.id%> </div>
        <div class="reason" style="width: 30%;">Date Expiry</div>
        <div class="reason" style="width: 30%;"><%=open_deal.expiry_date %></div>
      </div>
      <div class="discount-bar">
        Location | Current Discount |  No of Deals Bought
      </div>
      <div class="price">
        <%=open_deal.merchant.merchant_profile.address1%> <%=open_deal.merchant.merchant_profile.address1%> <%=open_deal.merchant.merchant_profile.city%>  | <%=open_deal.discount%> | Save $130!
      </div>
    </div>
  <%end%>
</div>
