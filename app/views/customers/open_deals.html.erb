<script src="http://www.google.com/jsapi" type="text/javascript"></script>
<script type="text/javascript">
  google.load("jquery", "1.3.2");
</script>
<script src='/javascripts/filter.js' type='text/javascript' ></script>
<div id="page-wrap">  <br />
  <h1>&nbsp;</h1>
  <p id="catpicker"></p>
  <br />
  <%for opdd in @open_deal_discounts
    discount = opdd[1]
    open_deal = @open_deals[opdd[0]]
    opd = Deal.find(open_deal.id)
  %>    

    <div style="margin-left: 140px; opacity: 0.8;" class="discounted-item freeshipping">
     <a href="/deal_details?id=<%= open_deal.id %>"><img border="0" alt="img" src="<%= opd.deal_photo.url(:small) %>"></a>
     <div class="reasonbar">
       <div style="width: 65%; color: rgb(255, 255, 255);" class="prod-title"><a style="color: rgb(255, 255, 255);" href="/customers/deal_details?id=<%=open_deal.id%>"><%=open_deal.name%></a> </div>
       <div style="width: 30%;" class="reason">Date Expiry</div>
       <div style="width: 30%;" class="reason"><%=Time.at(open_deal.end_time.to_i).strftime("%d-%m-%Y") %></div>
     </div>
     <div class="discount-bar">
      <table style="text-align:center;width: 510px;"><tr><td width="8%">Deals Bought</td><td  width="1%">|</td><td  width="2%">Discount</td><td  width="1%">|</td><td  width="30%">Location</td></tr>
      <tr><td ><%=open_deal.no_of_customers%></td><td>|</td><td><%=discount%> %</td><td> |</td><td><%=open_deal.address1%> <%=open_deal.address2%> <%=open_deal.city%></td></tr></table>
     </div>

   </div>


  <%end%>
</div>
